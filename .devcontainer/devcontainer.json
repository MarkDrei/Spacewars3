{
  "name": "Spacewars3 Development",
  
  // Use docker-compose to include PostgreSQL
  "dockerComposeFile": "docker-compose.yml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/Spacewars3",
  
  // Configure tool-specific properties
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "typescript.tsdk": "node_modules/typescript/lib"
      },
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally
  "forwardPorts": [3000, 5432],
  
  // Install dependencies after container is created
  "postCreateCommand": "npm install && .devcontainer/init-db.sh",
  
  // Show helpful message on attach
  "postAttachCommand": "echo 'âœ… PostgreSQL is running and ready! Run \"npm run dev\" to start the development server.'",

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root
  "remoteUser": "node"
}
