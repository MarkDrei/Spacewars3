# Environment Variables for Spacewars3

# Session secret for encrypting cookies (REQUIRED for production)
# Generate a strong random string (32+ characters)
SESSION_SECRET=change-this-to-a-strong-random-secret-in-production

# Node environment
NODE_ENV=development

# Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Server hostname (for Docker)
HOSTNAME=0.0.0.0

# Port (optional, defaults to 3000)
# PORT=3000

# PostgreSQL Database Configuration
# When running in devcontainer: use 'db' and 'db-test'
# When running locally with docker-compose: use 'localhost' with ports 5432 and 5433
# When running in CI/CD: use 'localhost' (GitHub Actions services)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=spacewars
POSTGRES_USER=spacewars
POSTGRES_PASSWORD=spacewars

# Test Database Configuration (used when NODE_ENV=test)
# When running in devcontainer: use 'db-test' and port 5432
# When running locally with docker-compose: use 'localhost' and port 5433
POSTGRES_TEST_HOST=localhost
POSTGRES_TEST_PORT=5433
POSTGRES_TEST_DB=spacewars_test
POSTGRES_TEST_USER=spacewars
POSTGRES_TEST_PASSWORD=spacewars
