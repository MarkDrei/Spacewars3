# Environment Variables for Spacewars3

# Session secret for encrypting cookies (REQUIRED for production)
# Generate a strong random string (32+ characters)
SESSION_SECRET=change-this-to-a-strong-random-secret-in-production

# Node environment
NODE_ENV=development

# Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Server hostname (for Docker)
HOSTNAME=0.0.0.0

# Port (optional, defaults to 3000)
# PORT=3000

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=spacewars
POSTGRES_USER=spacewars
POSTGRES_PASSWORD=spacewars

# Test Database (used when NODE_ENV=test)
POSTGRES_TEST_DB=spacewars_test
