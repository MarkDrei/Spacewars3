{
  "name": "@spacewars-ironcore/server",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "ts-node src/index.ts",
    "build": "tsc --build --verbose && npm run generate-schema",
    "clean": "rm -rf dist/ *.tsbuildinfo",
    "rebuild": "npm run clean && npm run build",
    "start": "node dist/src/index.js",
