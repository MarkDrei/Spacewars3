    "init-db": "sqlite3 db/users.db < db/schema.sql",
    "generate-schema": "ts-node generate-schema.ts"
  },
  "dependencies": {
    "@spacewars-ironcore/shared": "0.1.0",
    "@types/node": "^24.0.10",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "express": "4.18.2",
    "express-session": "^1.17.3",
    "sqlite3": "^5.1.6",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/sqlite3": "^5.1.0",
    "@types/supertest": "^6.0.3",
    "enhanced-resolve": "^5.18.2",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
